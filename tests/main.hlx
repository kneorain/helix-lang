// Recursive function to calculate factorial
fn factorial(n: i32) -> i32 {
    if n <= 1:
        return 1;

    return n * factorial(n - 1);
}

const eval fn range(n: i32) -> std::vector::<i32> {
    let v: std::vector::<i32>;

    for (let i: i32 = 0; i < n; i++) {
        v.push_back(i);
    }
    
    return v;
}

